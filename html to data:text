<body>
  <div class="container">
    <h2>Convert HTML to <code>data:text/html</code> URL</h2>
    
    <label for="input">Paste your HTML here:</label>
    <textarea id="input" placeholder="Enter your HTML..."></textarea>
    
    <div class="buttons">
      <button onclick="convert()">Convert</button>
      <button onclick="copyOutput()">Copy URL</button>
    </div>
    
    <h3>Result:</h3>
    <textarea id="output" readonly></textarea>
  </div>

  <script>
    function convert() {
      const html = document.getElementById("input").value;
      if (!html.trim()) {
        alert("Please paste some HTML first!");
        return;
      }
      const dataUrl = "data:text/html," + encodeURIComponent(html);
      document.getElementById("output").value = dataUrl;
    }

    function copyOutput() {
      const output = document.getElementById("output");
      if (!output.value) {
        alert("Nothing to copy yet!");
        return;
      }
      output.select();
      document.execCommand("copy");
      alert("Copied to clipboard!");
    }
  </script>
